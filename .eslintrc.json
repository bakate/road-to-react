{
  "env": {
    "es6": true
  },
  "extends": [
    "react-app",
    "prettier/react"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "prettier"
  ],
  "rules": {
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    // "react-hooks/rules-of-hooks": 0,
    "react/jsx-props-no-spreading": 0,
    "prettier/prettier": "error"
  }
}
